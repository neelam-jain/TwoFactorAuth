<h1>Please Register</h1>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %><br/><br/>

  <%= f.label :password %>
  <%= f.password_field :password %><br/><br/>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br/><br/>

  <%= f.submit "Register" %>
<% end %><br/>
